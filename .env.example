# Database Configuration (local dev)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fourunners"

# Database Configuration (docker-compose prod)
POSTGRES_USER="octopus"
POSTGRES_PASSWORD="change-me-very-long"
POSTGRES_DB="octopus"

# Redis Configuration (required for rate limiting and job queues)
# Local dev
REDIS_URL="redis://localhost:6379"
# docker-compose prod
# REDIS_URL="redis://redis:6379"

# MinIO/S3 Storage Configuration (local dev)
MINIO_ENDPOINT="http://localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="4runners-media"
MINIO_REGION="eu-west-3"

# MinIO/S3 Storage Configuration (docker-compose prod)
MINIO_ROOT_USER="octopus-minio"
MINIO_ROOT_PASSWORD="change-me-very-long"
MINIO_BUCKET="octopus-media"
MINIO_REGION="eu-west-3"
# Optional server-side encryption
# MINIO_SSE="true"

# Application Configuration
APP_URL="http://localhost:3000"
NODE_ENV="development"

# Optional agency admin override (bypass DB password)
# ADMIN_LOGIN="admin@example.com"
# ADMIN_PASSWORD="change-me"

# Seed Credentials (optional)
# If not set, random credentials will be generated and displayed during seed
# SEED_ADMIN_PASSWORD="your-secure-password-here"
# SEED_CLIENT_TOKEN="your-secure-token-here"

# SECURITY NOTES:
# - In production, use strong, unique passwords and tokens
# - Never commit the actual .env file to version control
# - Rotate credentials regularly
# - Use HTTPS in production (set NODE_ENV=production)
# - Consider using a secrets management service
